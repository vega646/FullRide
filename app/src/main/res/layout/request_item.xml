<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rcontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:alpha="20"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvactiv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:alpha="80"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="500"
            android:animateLayoutChanges="true"
            android:scrollbarStyle="outsideOverlay"
            tools:visibility="visible">


            <Button
                android:id="@+id/bcanc"
                android:layout_width="193dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="208dp"
                android:layout_marginTop="98dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/quantum_googred"
                android:text="@string/deny"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/actdate"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="74dp"
                android:layout_marginEnd="18dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/actname"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="143dp"
                android:layout_marginTop="13dp"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/amajor"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="168dp"
                android:layout_marginTop="46dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bacc"
                android:layout_width="193dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="98dp"
                android:layout_marginEnd="203dp"
                android:layout_marginBottom="-1dp"
                android:backgroundTint="@color/quantum_lightgreen"
                android:capitalize="none"
                android:textAllCaps="false"
                tools:text="@string/acc" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                app:srcCompat="@drawable/pro" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>