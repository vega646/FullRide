<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rcontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:alpha="20"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvactiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="80"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="500"
            android:animateLayoutChanges="true"
            android:scrollbarStyle="outsideOverlay"
            tools:visibility="visible">


            <Button
                android:id="@+id/bcanc"
                android:layout_width="193dp"
                android:layout_height="41dp"
                android:layout_below="@+id/actdate"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/bacc"
                android:backgroundTint="@color/quantum_googred"
                android:text="@string/deny"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/actdate"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="81dp"
                android:layout_marginEnd="78dp"
                android:layout_toEndOf="@+id/imageView2"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/actname"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="123dp"
                android:layout_marginTop="14dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/amajor"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="148dp"
                android:layout_marginTop="48dp"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bacc"
                android:layout_width="193dp"
                android:layout_height="41dp"
                android:layout_below="@+id/actdate"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/quantum_lightgreen"
                android:text="@string/acc"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                app:srcCompat="@drawable/pro" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>