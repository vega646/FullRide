<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rcontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:alpha="20"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvactiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="80"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="500"
            android:animateLayoutChanges="true"
            android:scrollbarStyle="outsideOverlay"
            tools:visibility="visible">


            <TextView
                android:id="@+id/accepteddate"
                android:layout_width="279dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="116dp"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="17dp"
                android:layout_toEndOf="@+id/imageView4"
                android:fontFamily="@font/alata"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/acceptedname"
                android:layout_width="182dp"

                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="107dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/alata"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/accceptedmajor"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="112dp"
                android:layout_marginTop="62dp"
                android:fontFamily="@font/alata"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/pro" />

            <ImageButton
                android:id="@+id/deletereq"
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="9dp"
                android:backgroundTint="@color/white"
                android:foregroundTint="@color/fs"
                app:srcCompat="@android:drawable/ic_menu_delete"
                app:tint="@color/fs" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>